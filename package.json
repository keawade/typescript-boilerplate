{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "ts-boilerplate",
  "version": "1.0.0",
  "main": "main.ts",
  "type": "module",
  "author": "keawade",
  "license": "MIT",
  "description": "",
  "scripts": {
    "start": "node src/main.ts",
    "start:dev": "node --env-file=.env --watch src/main.ts",
    "test": "node --env-file=.env.test --test",
    "test:watch": "npm run test -- --watch",
    "format": "prettier . --write --list-different",
    "format:check": "prettier . --list-different",
    "lint": "eslint ."
  },
  "dependencies": {
    "fastify": "^5.2.1",
    "pino": "^9.6.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.20.0",
    "@tsconfig/node24": "^24.0.1",
    "@types/node": "^22.13.1",
    "eslint": "^9.20.0",
    "pino-pretty": "^13.0.0",
    "prettier": "^3.4.2",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.23.0"
  }
}
